<div class="mt-4">
    <div class="row">

        {{#each songs}}
        <div class="col-sm-6 col-lg-2">
            <div class="card card-song-item">
                <a href="/songs/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/songs/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.singer}}</p>
                    <a href="/songs/{{this.slug}}" class="btn btn-primary">Nghe nháº¡c</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>